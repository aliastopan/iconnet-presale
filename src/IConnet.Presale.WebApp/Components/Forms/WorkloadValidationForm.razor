@using IConnet.Presale.Domain.Common
@using IConnet.Presale.Domain.Enums

@if (WorkPaper is not null)
{
    <div class="d-flex flex-column">
        <FluentLabel Typo="Typography.Subject">@WorkPaper.ApprovalOpportunity.IdPermohonan</FluentLabel>
        <div>
            Keterangan: <span>@WorkPaper.ApprovalOpportunity.Pemohon.Keterangan</span>
        </div>
        <div>
            Contact: <span>@WorkPaper.ApprovalOpportunity.Pemohon.WhatsApp</span>
        </div>
    </div>

    <FluentStack Orientation="Orientation.Horizontal"
        HorizontalAlignment="HorizontalAlignment.Start"
        VerticalAlignment="VerticalAlignment.Top"
        HorizontalGap="4">

        <div class="validation-element">
            <div class="validation-label">
                <FluentLabel Typo="Typography.Body"> LABEL </FluentLabel>
                <FluentSelect Items="@StatusValidasi"
                    @bind-Value="@placeholder"
                    Position="SelectPosition.Below"
                    Width="150px" />
            </div>
            <div class="validation-value">
                <FluentLabel Typo="Typography.Body">@WorkPaper.ApprovalOpportunity.Pemohon.NamaLengkap</FluentLabel>
                <FluentTextField @bind-Value=placeholder
                    Disabled="true"
                    Placeholder="Proper value"></FluentTextField>
            </div>
        </div>

    </FluentStack>
}
