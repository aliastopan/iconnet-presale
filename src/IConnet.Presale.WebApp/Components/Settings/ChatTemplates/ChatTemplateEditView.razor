<div class="d-flex flex-row">
    <div class="chat-template-setting-edit-section" style="width: 300px; margin-right: 16px; margin-top: 16px;">
        <FluentTextArea
            style="width: 100%;"
            Placeholder="Chat Template"
            Value="@ContentEditHolder"
            ValueChanged="OnContentEditHolderChanged"
            Rows="12"></FluentTextArea>
    </div>
    <div class="chat-template-setting-view-section">
        <div>
            @ChatTemplatesSettings.First().TemplateName
        </div>
        <div class="scrollable-chat-template-setting-view-section">
            @foreach(var chat in ChatTemplatesSettings)
            {
                <div style="margin-bottom: 4px;">
                    <FluentButton BackgroundColor="crimson"
                        Color="white"
                        IconStart="@(new Icons.Regular.Size20.Edit().WithColor("#ffffff"))"
                        OnClick="@(() => EditChat(@chat))">
                        </FluentButton>
                </div>
                <div class="chat-bubble-setting">
                    @GetHtmlString(@chat.Content)
                </div>
            }
        </div>
    </div>
</div>
