<div style="margin-left: 200px; ">
    <div>
        <span>Template: </span> <span class="chat-template-badge">@TemplateName</span>
    </div>
    <div class="scrollable-chat-template-setting-view-section" style="padding-top: 8px; overflow-x: hidden !important; max-height: calc(100vh - 300px) !important;">
        @foreach(var chat in ChatTemplates)
        {
            <div class="chat-bubble-setting" style="margin-bottom: 16px;">
                <div>
                    @GetHtmlString(@chat.Content)
                </div>
            </div>
        }
    </div>
</div>