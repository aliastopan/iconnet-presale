<FluentDialogHeader ShowDismiss="true">
    <FluentStack VerticalAlignment="VerticalAlignment.Center">
        <FluentIcon Value="@(new Icons.Regular.Size24.CollectionsAdd())" />
        <FluentLabel Typo="Typography.PaneHeader">
            @Dialog.Instance.Parameters.Title
        </FluentLabel>
    </FluentStack>
</FluentDialogHeader>

<div class="d-flex flex-row align-items-end">
    <div>
        <FluentTextField style="width: 300px; margin-right: 4px;"
            Label="Root Cause"
            Value="@NewRootCause"
            ValueChanged="OnNewRootCauseChanged"
            Placeholder="Root Cause Baru"></FluentTextField>
    </div>
    <div>
        <FluentSelect Items="@RootCauseClassifications"
            Position="SelectPosition.Above"
            Value="@NewRootCauseClassification"
            ValueChanged="OnNewRootCauseClassificationChanged"
            Label="Classification"
            Width="250px" />
    </div>
</div>

<FluentDialogFooter>
    <FluentStack VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.End">
        <FluentButton Appearance="Appearance.Accent" Disabled="@(!NewRootCause.HasValue())" OnClick="@SaveAsync" IconStart="@(new Icons.Regular.Size16.Save())">Simpan</FluentButton>
        <FluentButton Appearance="Appearance.Neutral" OnClick="@CancelAsync">Batal</FluentButton>
    </FluentStack>
</FluentDialogFooter>
