@if (Models is not null)
{
    <div class="d-flex flex-column root-cause-setting-options">
        <div>
            <FluentCheckbox style="margin-left: 8px;"
                @bind-Value="@EnableAddRootCause"
                Label="Tambah Root Cause"/>
        </div>
        <div class="d-flex flex-row align-items-end" style="margin-top: 4px; margin-left: 8px;">
            <FluentTextField style="width: 250px; margin-right: 8px;"
                Disabled="@(!EnableAddRootCause)"
                Placeholder="Root Cause Baru"></FluentTextField>

            <FluentButton Appearance="Appearance.Accent"
                Disabled="@(!EnableAddRootCause)">
                Simpan</FluentButton>
        </div>
    </div>

    <div class="root-cause-settings">
        <FluentDataGrid Items="@Models"
            TGridItem="RootCauseSettingModel"
            Virtualize="true"
            ItemSize="32"
            GridTemplateColumns="@GridTemplateCols">

            <TemplateColumn Title="ROOT CAUSE" Style="@GetWidthStyle(350)">
                <div class="">
                    @context.Cause
                </div>
            </TemplateColumn>
            <TemplateColumn Title="STATUS" Style="@GetWidthStyle(100)">
                <div class="">
                    @context.GetStatus()
                </div>
            </TemplateColumn>
            <TemplateColumn Title="ENABLE" Style="@GetWidthStyle(100)">
                <div class="" style="text-align: center; margin-top: 4px;">
                    <FluentCheckbox style=""
                        Value="@context.IsEnabled"
                        ValueChanged="@context.OnIsEnabledChanged"/>
                </div>
            </TemplateColumn>
            <TemplateColumn Title="INCLUDE" Style="@GetWidthStyle(100)">
                <div class="" style="text-align: center; margin-top: 4px;">
                    <FluentCheckbox style=""/>
                </div>
            </TemplateColumn>
        </FluentDataGrid>
    </div>
}

