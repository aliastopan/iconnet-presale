<div class="upper-boundary-filter-section">

    <h4>Rentang Data Presale</h4>

    <FluentStack Orientation="Orientation.Horizontal"
        HorizontalAlignment="HorizontalAlignment.Start"
        VerticalAlignment="VerticalAlignment.Bottom">

        <div class="filter-date">
            @if (IsMonthlyView)
            {
                <div class="date-picker">
                    <FluentDatePicker style="width: 135px;"
                        Label="Tgl. Permohonan"
                        Value="@NullableUpperBoundaryDateTimeMin"
                        ValueChanged="OnUpperBoundaryDateMinChangedAsync"/>
                </div>
                <div class="date-until">
                    <span>s.d</span>
                </div>
                <div class="date-picker">
                    <FluentDatePicker style="width: 135px;"
                        Label="@UpperBoundaryTimeRangeLabel"
                        Value="@NullableUpperBoundaryDateTimeMax"
                        ValueChanged="OnUpperBoundaryDateMaxChangedAsync"/>
                </div>
                <div style="margin-left: 8px;">
                    <FluentButton BackgroundColor="crimson"
                        Color="white"
                        Disabled="@IsReloadRequired"
                        OnClick="ReloadAsync">Reload</FluentButton>
                </div>
            }

            @if (IsWeeklyView)
            {
                <div class="date-picker">
                    <FluentDatePicker style="width: 135px;"
                        Label="Ganti Rentang"
                        Value="@NullableMiddleBoundaryDateTimeMin"
                        ValueChanged="OnMiddleBoundaryDateMinChangedAsync"/>
                </div>
                <div class="date-until">
                    <span>s.d</span>
                </div>
                <div class="date-picker">
                    <FluentDatePicker style="width: 135px;"
                        Label="Weekly"
                        Value="@NullableMiddleBoundaryDateTimeMax"
                        ValueChanged="OnMiddleBoundaryDateMaxChangedAsync"/>
                </div>
            }

            @if (IsDailyView)
            {
                <div class="date-picker">
                    <FluentDatePicker style="width: 135px;"
                        Label="Ganti Hari"
                        Value="@NullableLowerBoundaryDateTime"
                        ValueChanged="OnLowerBoundaryDateChangedAsync"/>
                </div>
            }

        </div>

    </FluentStack>

</div>