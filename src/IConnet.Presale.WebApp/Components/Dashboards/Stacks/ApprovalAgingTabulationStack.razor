@inherits ApprovalAgingTabulationStackBase

<div class="d-flex flex-row align-items-top w-100">

    <div class="d-flex flex-column" style="margin-left: 4px; margin-right: 32px;">
        <FluentButton Appearance="@MonthlyToggleAppearance"
            style="width: 135px; margin-bottom: 8px;"
            OnClick="ToggleToMonthlyView">
            Monthly</FluentButton>
        <FluentButton Appearance="@WeeklyToggleAppearance"
            style="width: 135px; margin-bottom: 8px;"
            OnClick="ToggleToWeeklyView">
            Weekly</FluentButton>
        <FluentButton Appearance="@DailyToggleAppearance"
            style="width: 135px; margin-bottom: 8px;"
            OnClick="ToggleToDailyView">
            Daily</FluentButton>

        <FluentButton BackgroundColor="crimson"
            Color="white"
            IconStart="@(new Icons.Filled.Size20.Calendar().WithColor("#ffffff"))"
            style="width: 135px; margin-top: 24px;"
            OnClick="OpenBoundaryFilterAsync">
            Filter</FluentButton>

        <FluentCheckbox style="margin-top: 16px;"
            @bind-Value="@IsPageView"
            Label="Page View"/>
    </div>

    <div class="d-flex flex-column w-100">
        <div style="@MonthlyToggleDisplayStyle">
            <h4 class="app-font">Laporan Aging Approval <span>@CurrentMonthIndicator()</span> - <span>@GetUpperBoundaryDateMin()</span> s.d <span>@GetUpperBoundaryDateMax()</span></h4>

            <div class="d-flex flex-column">
                <h5 class="app-font">Aging Approval</h5>
                <span style="margin-left: 2px;">
                    Akumulasi dengan waktu freeze di luar jam kerja @ShiftEnd s.d @ShiftStart
                </span>
                <ApprovalAgingTabulation Models="@UpperBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">Achievement SLA Approval</h5>
                <span style="margin-left: 2px;">
                    SLA Approval (PAC) adalah @TotalMinutesSlaApproval menit
                </span>
                <ApprovalSlaTabulation Models="@UpperBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">SLA Win Rate Approval</h5>
                <ApprovalSlaWinRateTabulation Models="@UpperBoundaryModels"
                    IsPageView="@IsPageView" />
            </div>
        </div>
        <div style="@WeeklyToggleDisplayStyle">
            <h4 class="app-font">Laporan Aging Approval <span class="">@CurrentWeekIndicator()</span> - <span>@GetMiddleBoundaryDateMin()</span> s.d <span>@GetMiddleBoundaryDateMax()</span></h4>

            <div class="d-flex flex-column">
                <h5 class="app-font">Aging Approval</h5>
                <span style="margin-left: 2px;">
                    Akumulasi dengan waktu freeze di luar jam kerja @ShiftEnd s.d @ShiftStart
                </span>
                <ApprovalAgingTabulation Models="@MiddleBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">Achievement SLA Approval</h5>
                <span style="margin-left: 2px;">
                    SLA Approval (PAC) adalah @TotalMinutesSlaApproval menit
                </span>
                <ApprovalSlaTabulation Models="@MiddleBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">SLA Win Rate Approval</h5>
                <ApprovalSlaWinRateTabulation Models="@MiddleBoundaryModels"
                    IsPageView="@IsPageView" />
            </div>
        </div>
        <div style="@DailyToggleDisplayStyle">
            <h4 class="app-font">Laporan Aging Approval <span class="">@TodayIndicator()</span> - <span>@GetLowerBoundaryDate()</span></h4>

            <div class="d-flex flex-column">
                <h5 class="app-font">Aging Approval</h5>
                <span style="margin-left: 2px;">
                    Akumulasi dengan waktu freeze di luar jam kerja @ShiftEnd s.d @ShiftStart
                </span>
                <ApprovalAgingTabulation Models="@LowerBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">Achievement SLA Approval</h5>
                <span style="margin-left: 2px;">
                    SLA Approval (PAC) adalah @TotalMinutesSlaApproval menit
                </span>
                <ApprovalSlaTabulation Models="@LowerBoundaryModels"
                    IsPageView="@IsPageView" />

                <h5 class="app-font" style="margin-top: 16px;">SLA Win Rate Approval</h5>
                <ApprovalSlaWinRateTabulation Models="@LowerBoundaryModels"
                    IsPageView="@IsPageView" />
            </div>
        </div>
    </div>

</div>
