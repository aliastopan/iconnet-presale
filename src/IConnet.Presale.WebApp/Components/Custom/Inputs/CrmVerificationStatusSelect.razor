<FluentPopover Style="width: 350px;"
    AnchorId="verification-status-popover"
    VerticalPosition="VerticalPosition.Top"
    @bind-Open="@IsPopoverVisible">
    <Body>
        <FluentListbox TOption="string"
            Items="@VerificationStatusOptions"
            OptionDisabled="@OptionDisable"
            Height="@DropdownHeightPx"
            Width="350px"
            Value="@VerificationStatus"
            ValueChanged="OnVerificationStatusChangedAsync"/>
        <FluentSearch style="width: 350px;"
            @bind-Value=@VerificationStatusFilter
            Immediate="true"
            Spellcheck="false"
            Placeholder="Status Verifikasi"></FluentSearch>
    </Body>
</FluentPopover>

<div class="verification-options">
    <FluentButton Appearance="Appearance.Neutral"
        id="verification-status-popover"
        Disabled="@IsDisabled"
        style="width: 350px"
        OnClick="@OpenPopover">
        @GetDisplayVerificationStatus()</FluentButton>
</div>

@code
{
    private string _greyedOutStyle => IsDisabled
        ? "color: #d3d3d3; !important"
        : "";
}