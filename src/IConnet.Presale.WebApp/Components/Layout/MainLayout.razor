@inherits MainLayoutBase

<AuthorizeView>
    <Authorized>
        <FluentLayout>

            <FluentHeader Height="60" Class="header-container">
                <div>
                    <span style="font-weight: 600 !important;">Presale</span>
                    <span style="font-weight: 300 !important;">Application</span>
                </div>
                <div class="push-right">
                    <FluentButton IconEnd="@(new Icons.Regular.Size20.ArrowExit())"
                        Appearance="Appearance.Lightweight"
                        OnClick="SessionService.SignOutAsync">Sign-Out</FluentButton>
                </div>
                <div class="identity">
                    <div class="alias">
                        <span class="username">@SessionService.UserModel!.Username</span>
                        <span class="role">(@SessionService.UserModel.Role)</span>
                    </div>
                    <div class="job-title">
                        @SessionService.UserModel!.JobTitle
                    </div>
                </div>
            </FluentHeader>

            <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
                <NavMenu />
                <FluentBodyContent>

                    <div class="tab-nav">
                        @if (TabNavigationManager.TabNavigations.Count > 0)
                        {
                            @foreach (var tabNavigation in TabNavigationManager.TabNavigations)
                            {
                                <TabNav Manager="@TabNavigationManager"
                                    OnTabClose="@RefreshTabControl"
                                    Tab="@tabNavigation"/>
                            }
                        }
                    </div>
                    <div class="content">
                        @Body
                    </div>

                    <FluentDialogProvider />
                    <FluentMessageBarProvider />
                    <FluentToastProvider MaxToastCount="10" Timeout="10000"/>

                </FluentBodyContent>
            </FluentStack>

            <FluentFooter>
                <div class="link1">
                    <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
                </div>
                <div class="link2">
                    <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
                </div>
            </FluentFooter>

        </FluentLayout>
    </Authorized>
    <NotAuthorized>
        <FluentLayout>
            @{
                RedirectUnauthorized();
            }
            <IndexPage />
        </FluentLayout>
    </NotAuthorized>
    <Authorizing>
        <div class="loading-app">
            <FluentProgressRing />
        </div>
    </Authorizing>
</AuthorizeView>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
