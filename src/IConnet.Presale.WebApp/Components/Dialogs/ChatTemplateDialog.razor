<FluentDialogHeader ShowDismiss="false">
    <FluentStack VerticalAlignment="VerticalAlignment.Center">
        <FluentIcon Value="@(new Icons.Regular.Size24.Chat())" />
        <FluentLabel Typo="Typography.PaneHeader">
            @Dialog.Instance.Parameters.Title
        </FluentLabel>
    </FluentStack>
</FluentDialogHeader>

<div class="chat-box">
    @foreach (var chatTemplate in ChatTemplateService.HtmlChatTemplates)
    {
        <div class="chat-bubble">
            <div class="chat-header">
                <span class="chat-sender-alias">@SessionService.UserModel!.Username</span>
            </div>
            <p class="chat-text">
                @ChatTemplateService.ReplacePlaceholder(chatTemplate)
            </p>
            <div class="chat-footer">
                <span class="chat-timestamp">@DateTimeService.GetClockTime()</span>
            </div>
        </div>
    }
</div>
